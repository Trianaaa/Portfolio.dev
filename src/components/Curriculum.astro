---
// src/components/Curriculum.astro
import SocialPill from "./SocialPill.astro";
import CVIcon from "./icons/CV.astro";

const cvUrl = "/CV - Pablo Triana 23072025.pdf";
---

<section class="w-full flex flex-col items-center justify-center pt-12 pb-0 px-4 sm:px-6 text-center">
  <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
    Want to know more about me?
  </h2>
  <p class="mt-4 text-base sm:text-lg text-gray-600 dark:text-gray-300 max-w-xl">
    Download my updated CV and learn more about my experience and skills.
  </p>
  <div class="mt-6 mb-2">
    <SocialPill href={cvUrl} download class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-full text-sm font-medium shadow transition duration-200 flex items-center">
      <CVIcon class="size-5 md:size-6 mr-2" />
      Download CV
    </SocialPill>
  </div>
</section>
