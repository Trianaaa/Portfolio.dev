---
import SocialPill from "./SocialPill.astro";
import CVIcon from "./icons/CV.astro";

const cvUrl = "/CV - Pablo Triana 23072025.pdf";
---

<section class="relative w-full py-16 px-4 sm:px-6">
  <div class="max-w-6xl mx-auto">
    
    <!-- Header Section - Minimalist -->
    <div class="text-center mb-12">
      <p class="text-base text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Download my updated CV to discover my complete professional journey, skills, and achievements.
      </p>
    </div>

    <!-- CV Download Section -->
    <div class="grid lg:grid-cols-2 gap-4 md:gap-6 mb-8 md:mb-12">
      <!-- CV Card - Minimalist -->
      <div class="bg-white dark:bg-gray-900 rounded-xl p-6 md:p-8 border border-gray-200 dark:border-gray-800 hover:border-gray-300 dark:hover:border-gray-700 transition-all duration-300 hover:shadow-lg">
        <div class="flex flex-col items-center text-center">
          <!-- CV Icon -->
          <div class="mb-4 md:mb-6 p-3 md:p-4 bg-gray-100 dark:bg-gray-800 rounded-xl">
            <CVIcon class="w-10 h-10 md:w-12 md:h-12 text-gray-700 dark:text-gray-300" />
          </div>
          
          <h3 class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white mb-2 md:mb-3">
            Professional CV
          </h3>
          <p class="text-xs md:text-sm text-gray-600 dark:text-gray-400 mb-4 md:mb-6">
            Complete overview of my experience, education, and technical skills
          </p>
          
          <!-- CV Stats - Minimalist -->
          <div class="flex flex-wrap justify-center gap-2 mb-6 md:mb-8">
            <span class="px-2.5 md:px-3 py-1 md:py-1.5 bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-300 rounded-full text-[10px] md:text-xs font-semibold">
              Updated 2025
            </span>
            <span class="px-2.5 md:px-3 py-1 md:py-1.5 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full text-[10px] md:text-xs font-semibold">
              PDF Format
            </span>
          </div>

          <!-- Download Button - Minimalist -->
          <a
            href={cvUrl}
            download
            class="w-full flex items-center justify-center gap-2 px-4 md:px-6 py-2.5 md:py-3 bg-gray-900 dark:bg-gray-800 hover:bg-gray-800 dark:hover:bg-gray-700 text-white rounded-lg font-medium text-sm md:text-base transition-all duration-300 hover:scale-105"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span>Download CV</span>
          </a>
        </div>
      </div>

      <!-- Profile Image Card - Minimalist -->
      <div class="bg-white dark:bg-gray-900 rounded-xl p-6 md:p-8 border border-gray-200 dark:border-gray-800 hover:border-gray-300 dark:hover:border-gray-700 transition-all duration-300 hover:shadow-lg flex items-center justify-center">
        <div class="text-center">
          <div class="relative inline-block mb-4 md:mb-6">
            <img 
              src="Pablo_Cor.png" 
              alt="Pablo Triana - Professional Profile" 
              class="w-40 h-40 md:w-48 md:h-48 lg:w-56 lg:h-56 rounded-xl object-cover border-2 border-gray-200 dark:border-gray-800"
            />
          </div>
          
          <h3 class="text-lg md:text-xl font-bold text-gray-900 dark:text-white mb-1.5 md:mb-2">
            Pablo Triana
          </h3>
          <p class="text-xs md:text-sm text-gray-600 dark:text-gray-400 font-medium">
            Systems Engineer & Web Developer
          </p>
        </div>
      </div>
    </div>

    <!-- Quote Section - Minimalist -->
    <div class="max-w-3xl mx-auto">
      <div class="bg-white dark:bg-gray-900 rounded-xl p-6 md:p-8 border border-gray-200 dark:border-gray-800">
        <div class="flex flex-col md:flex-row items-start gap-4 md:gap-6">
          <!-- Quote icon -->
          <div class="flex-shrink-0 w-10 h-10 md:w-12 md:h-12 bg-gray-100 dark:bg-gray-800 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 md:w-6 md:h-6 text-gray-600 dark:text-gray-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
            </svg>
          </div>
          
          <div class="flex-1">
            <blockquote class="text-base md:text-lg lg:text-xl italic text-gray-700 dark:text-gray-300 leading-relaxed mb-3 md:mb-4">
              "The future belongs to those who believe in the beauty of their dreams."
            </blockquote>
            <cite class="text-xs md:text-sm font-semibold text-gray-900 dark:text-white flex items-center gap-2">
              <span class="w-4 md:w-6 h-px bg-gray-300 dark:bg-gray-700"></span>
              Eleanor Roosevelt
            </cite>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

