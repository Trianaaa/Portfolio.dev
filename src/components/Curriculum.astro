---
import SocialPill from "./SocialPill.astro";
import CVIcon from "./icons/CV.astro";

const cvUrl = "/CV - Pablo Triana 23072025.pdf";
---

<section class="relative w-full py-24 px-4 sm:px-6 overflow-hidden">
  <!-- Main Content -->
  <div class="relative z-10 max-w-6xl mx-auto">
    
    <!-- Header Section -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-blue-500/20 to-purple-500/20 rounded-full border border-blue-500/30 text-sm font-semibold mb-6 shadow-lg">
        <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <span class="text-blue-600 dark:text-blue-400">Professional Resume</span>
      </div>
      
      <h2 class="text-5xl md:text-6xl font-bold tracking-tight mb-6">
        <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-cyan-600 bg-clip-text text-transparent">
          Want to know more about me?
        </span>
      </h2>
      
      <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed">
        Download my updated CV and discover my complete professional journey, skills, and achievements.
      </p>
    </div>

    <!-- CV Download Section -->
    <div class="grid lg:grid-cols-2 gap-8 mb-16">
      <!-- CV Card -->
      <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-3xl p-8 md:p-10 border border-gray-200/60 dark:border-gray-700/60 shadow-2xl hover:shadow-3xl transition-all duration-500 group overflow-hidden">
        <!-- Background gradient effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 via-transparent to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        
        <div class="relative z-10">
          <!-- CV Icon and Info -->
          <div class="flex flex-col items-center text-center mb-8">
            <div class="relative group/icon mb-6">
              <!-- Glow effect -->
              <div class="absolute -inset-4 bg-gradient-to-r from-blue-600 to-purple-600 rounded-3xl opacity-50 group-hover/icon:opacity-100 blur-xl transition duration-500"></div>
              <div class="relative w-24 h-28 bg-gradient-to-br from-blue-500 to-purple-500 rounded-2xl flex items-center justify-center shadow-2xl group-hover/icon:scale-110 transition-transform duration-500">
                <CVIcon class="w-12 h-12 text-white" />
              </div>
            </div>
            
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-3">
              Professional CV
            </h3>
            <p class="text-lg text-gray-600 dark:text-gray-400 mb-6">
              Complete overview of my experience, education, and technical skills
            </p>
            
            <!-- CV Stats -->
            <div class="flex flex-wrap justify-center gap-3 mb-8">
              <span class="px-4 py-2 bg-green-100 dark:bg-green-900/50 text-green-800 dark:text-green-200 rounded-full font-semibold text-sm shadow-md">
                âœ“ Updated 2025
              </span>
              <span class="px-4 py-2 bg-blue-100 dark:bg-blue-900/50 text-blue-800 dark:text-blue-200 rounded-full font-semibold text-sm shadow-md">
                ðŸ“„ PDF Format
              </span>
              <span class="px-4 py-2 bg-purple-100 dark:bg-purple-900/50 text-purple-800 dark:text-purple-200 rounded-full font-semibold text-sm shadow-md">
                ðŸš€ Ready to Work
              </span>
            </div>
          </div>

          <!-- Download Button -->
          <div class="text-center">
            <a
              href={cvUrl}
              download
              class="inline-flex items-center gap-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-10 py-4 rounded-2xl text-lg font-bold shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              <span>Download CV</span>
              <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Profile Image Card -->
      <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-3xl p-8 md:p-10 border border-gray-200/60 dark:border-gray-700/60 shadow-2xl hover:shadow-3xl transition-all duration-500 group overflow-hidden flex items-center justify-center">
        <!-- Background gradient effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-purple-500/5 via-transparent to-pink-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        
        <div class="relative z-10 text-center">
          <div class="relative inline-block group/image">
            <!-- Glow effect around image -->
            <div class="absolute -inset-6 bg-gradient-to-r from-blue-400/40 to-purple-400/40 rounded-full blur-2xl opacity-0 group-hover/image:opacity-100 transition-opacity duration-500"></div>
            
            <!-- Image container -->
            <div class="relative">
              <img 
                src="Pablo_Cor.png" 
                alt="Pablo Triana - Professional Profile" 
                class="w-56 h-56 md:w-64 md:h-64 rounded-3xl object-cover shadow-2xl border-4 border-white/80 dark:border-gray-700/80 transition-all duration-500 group-hover/image:scale-105"
              />
              
              <!-- Decorative elements -->
              <div class="absolute -top-3 -right-3 w-12 h-12 bg-gradient-to-r from-green-400 to-emerald-400 rounded-full flex items-center justify-center shadow-xl">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
            </div>
          </div>
          
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mt-6 mb-2">
            Pablo Triana
          </h3>
          <p class="text-gray-600 dark:text-gray-400 font-medium">
            Systems Engineer & Web Developer
          </p>
        </div>
      </div>
    </div>

    <!-- Inspirational Quote Section -->
    <div class="max-w-4xl mx-auto">
      <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-3xl p-10 md:p-12 border border-gray-200/60 dark:border-gray-700/60 shadow-2xl hover:shadow-3xl transition-all duration-500 group overflow-hidden">
        <!-- Background gradient effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 via-transparent to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        
        <div class="relative z-10">
          <div class="flex flex-col md:flex-row items-start gap-6">
            <!-- Quote icon -->
            <div class="flex-shrink-0 w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-500 rounded-2xl flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform duration-500">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
              </svg>
            </div>
            
            <div class="flex-1">
              <blockquote class="text-2xl md:text-3xl italic text-gray-700 dark:text-gray-300 leading-relaxed mb-6 font-medium">
                "The future belongs to those who believe in the beauty of their dreams."
              </blockquote>
              <cite class="text-xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
                <span class="w-8 h-0.5 bg-gradient-to-r from-blue-500 to-purple-500"></span>
                Eleanor Roosevelt
              </cite>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

