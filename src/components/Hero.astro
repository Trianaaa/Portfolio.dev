---
import SectionContainer from "../components/SectionContainer.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";

// Icons
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import InstagramIcon from "../components/icons/Instagram.astro";
import MailIcon from "../components/icons/Mail.astro";
import WhatsAppIcon from "../components/icons/WhatsApp.astro";
---

<SectionContainer id="about-me" class="py-44 pb-32">
  <div class="grid lg:grid-cols-2 gap-12 items-center mb-8">
    <!-- Profile Content - Left Side -->
    <div class="order-2 lg:order-1">
      <div class="flex gap-4 mb-4">
        <div class="relative">
          <img
            class="relative rounded-full shadow-xl size-20 md:size-24 border-2 border-white/80 dark:border-gray-700/80 transition-all duration-300 group-hover:scale-105 group-hover:shadow-2xl"
            src="Pablo_sal.png"
            alt="Pablo Photo"
          />
          <span class="absolute bottom-0 right-0 size-3 md:size-4 bg-green-500 rounded-full border-2 border-white dark:border-gray-800 animate-pulse"></span>
        </div>
        <a
          href="https://www.linkedin.com/in/trianaaa/"
          target="_blank"
          rel="noopener"
          class="flex items-center transition md:justify-center md:hover:scale-105"
        >
          <Badge>Open to work</Badge>
        </a>
      </div>

      <h1
        class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, I'm Pablo Triana
      </h1>

      <h2
        class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white font-semibold"
      >
        <span>+3 years of experience in IT support and software development.</span>
        <span class="text-yellow-800 dark:text-yellow-200">Web Developer</span>
        <span> and</span>
        <span class="text-[#2e7d32]">
          Systems Engineer from Central University
        </span>
        <span class="text-[#00bcd4]"> in BogotÃ¡, Colombia ðŸŒŽ.</span>
        <span class="opacity-75">
          Passionate about technology and creating unique applications.
        </span>
      </h2>
    </div>

    <!-- Professional Photo - Right Side -->
    <div class="order-1 lg:order-2 flex justify-center lg:justify-end">
      <div class="relative group">
        <!-- Main professional photo -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-purple-500/20 rounded-3xl blur-2xl group-hover:blur-3xl transition-all duration-500 opacity-75"></div>
          <img
            class="relative rounded-3xl shadow-2xl w-full max-w-md border-4 border-white/80 dark:border-gray-700/80 transition-all duration-500 group-hover:scale-105 group-hover:shadow-3xl"
            src="DSCF4706.jpg"
            alt="Pablo Triana - Professional Photo"
            loading="eager"
          />
          <!-- Decorative elements -->
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-br from-blue-500/30 to-purple-500/30 rounded-full blur-xl opacity-50 group-hover:opacity-75 transition-opacity duration-500"></div>
          <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-gradient-to-br from-cyan-500/30 to-blue-500/30 rounded-full blur-xl opacity-50 group-hover:opacity-75 transition-opacity duration-500"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- ðŸ”— Social Media - Below both sections -->
  <nav class="flex gap-5 flex-wrap justify-center lg:justify-start">
    <SocialPill href="https://www.linkedin.com/in/trianaaa/">
      <LinkedInIcon class="size-5 md:size-6" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/Trianaaa">
      <GitHubIcon class="size-5 md:size-6" />
      GitHub
    </SocialPill>
    <SocialPill href="https://www.instagram.com/pablixx._/">
      <InstagramIcon class="size-5 md:size-6" />
      Instagram
    </SocialPill>
    <SocialPill href="mailto:pabloandrestrianam@outlook.com">
      <MailIcon class="size-5 md:size-6" />
      Contact
    </SocialPill>
    <SocialPill href="https://wa.me/573163192552">
      <WhatsAppIcon class="size-5 md:size-6" />
      WhatsApp
    </SocialPill>
  </nav>
</SectionContainer>