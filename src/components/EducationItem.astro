---
interface Props {
  title: string
  institution: string
  description?: string
  link?: string
  date: string
}

const { title, institution, description, link, date } = Astro.props
---

<div class="relative group">
  <!-- Timeline line connector -->
  <div class="absolute left-6 top-8 bottom-0 w-0.5 bg-gradient-to-b from-indigo-400 to-transparent dark:from-indigo-500 dark:to-transparent opacity-30 group-hover:opacity-60 transition-opacity duration-300"></div>
  
  <!-- Main content card -->
  <div class="relative pl-16 pb-12">
    <!-- Enhanced timeline dot -->
    <div class="absolute left-0 top-2 flex items-center justify-center">
      <!-- Outer glow ring -->
      <div class="absolute w-8 h-8 rounded-full bg-gradient-to-r from-indigo-400/30 to-purple-400/30 animate-pulse"></div>
      <!-- Main dot -->
      <div class="relative w-4 h-4 rounded-full bg-gradient-to-r from-indigo-500 to-purple-500 border-2 border-white dark:border-gray-900 shadow-lg group-hover:scale-125 transition-transform duration-300">
        <!-- Inner highlight -->
        <div class="absolute inset-1 rounded-full bg-white/30"></div>
      </div>
    </div>

    <!-- Content card -->
    <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-xl p-6 border border-gray-200/50 dark:border-gray-700/50 shadow-lg hover:shadow-xl transition-all duration-300 group-hover:scale-[1.02] group-hover:bg-white/90 dark:group-hover:bg-gray-800/90">
      
      <!-- Header section -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-4">
        <!-- Date badge -->
        <time class="inline-flex items-center px-3 py-1 bg-gradient-to-r from-indigo-500 to-purple-500 text-white text-sm font-semibold rounded-full shadow-md">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
          </svg>
          {date}
        </time>
        
        <!-- Institution badge -->
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-amber-500 rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-gray-600 dark:text-gray-400 px-3 py-1 bg-gray-100 dark:bg-gray-700 rounded-full">
            {institution}
          </span>
        </div>
      </div>

      <!-- Title with education icon -->
      <div class="flex items-start gap-3 mb-3">
        <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-lg flex items-center justify-center shadow-md">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors duration-300 leading-tight">
          {title}
        </h3>
      </div>

      <!-- Description -->
      {description && (
        <div class="mb-4">
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed text-pretty">
            {description}
          </p>
        </div>
      )}

      <!-- Achievement/Skills section (placeholder for future use) -->
      <div class="flex flex-wrap gap-2 mb-4">
        <!-- You can add achievement badges or skill tags here in the future -->
      </div>

      <!-- Link section -->
      {link && (
        <div class="pt-4 border-t border-gray-200/50 dark:border-gray-700/50">
          <a
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-indigo-500 to-purple-500 hover:from-indigo-600 hover:to-purple-600 text-white font-medium rounded-lg shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-300"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            See more about the institution
            <svg
              class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300"
              fill="none"
              viewBox="0 0 14 10"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M1 5h12M13 5L9 1M13 5L9 9"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </a>
        </div>
      )}
    </div>
  </div>
</div>

<style>
  /* Custom animations for enhanced visual appeal */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }
  
  .group {
    animation: fadeInUp 0.6s ease-out;
  }
  
  /* Hover effect for the entire card */
  .group:hover .absolute.left-6 {
    opacity: 1;
  }
  
  /* Subtle shimmer effect on hover */
  .group:hover .bg-gradient-to-r {
    background-size: 200% 100%;
    animation: shimmer 2s infinite;
  }
</style>
