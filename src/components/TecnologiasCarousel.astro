---
const technologies = [
  { name: "HTML", icon: "/tech/html.svg" },
  { name: "CSS", icon: "/tech/css.svg" },
  { name: "JavaScript", icon: "/tech/javascript.svg" },
  { name: "TypeScript", icon: "/tech/typescript.svg" },
  { name: "React", icon: "/tech/react.svg" },
  { name: "Node.js", icon: "/tech/node.svg" },
  { name: "Python", icon: "/tech/python.svg" },
  { name: "Git", icon: "/tech/git.svg" },
  { name: "MongoDB", icon: "/tech/mongodb.svg" },
];
const duplicated = [...technologies, ...technologies];
---

<section class="py-12 flex flex-col items-center text-center">
  

  <div class="group overflow-hidden w-full max-w-6xl">
    <div class="flex gap-10 animate-marquee w-max group-hover:[animation-play-state:paused]">
      {duplicated.map((tech, index) => (
        <div
          key={index}
          class="flex flex-col items-center justify-center min-w-[120px] transition-transform duration-500 ease-in-out"
        >
          <div class="tech-card backdrop-blur-md bg-white/20 dark:bg-white/10 p-4 rounded-xl shadow-md border border-gray-200 dark:border-white/10">
            <img src={tech.icon} alt={tech.name} class="h-14 w-14 object-contain" loading="lazy" />
            <span class="mt-2 text-sm font-medium text-gray-800 dark:text-white">{tech.name}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
@keyframes marquee {
  0% {
    transform: translateX(0%);
  }
  100% {
    transform: translateX(-50%);
  }
}

.animate-marquee {
  animation: marquee 30s linear infinite;
}

.tech-card {
  transition: transform 0.5s ease, box-shadow 0.3s ease;
  transform-style: preserve-3d;
}
.tech-card:hover {
  transform: perspective(800px) rotateY(10deg) scale(1.08);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
}
</style>
