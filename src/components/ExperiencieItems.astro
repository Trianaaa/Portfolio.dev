---
interface Props {
  title: string;
  description: string;
  company: string;
  link?: string;
  date: string;
  current?: boolean;
}

const { title, description, company, link, date, current = false } = Astro.props;
---

<div class="relative group">
  <!-- Minimal timeline dot - aligned with year label -->
  <div class="absolute -left-3 md:-left-4 lg:-left-6 top-4 md:top-5 flex items-center justify-center z-10">
    <div class={`relative w-3 h-3 md:w-4 md:h-4 rounded-full ${current ? 'bg-emerald-500' : 'bg-blue-500'} border-2 border-white dark:border-gray-900 shadow-lg transition-all duration-300`}>
      {current && (
        <div class="absolute inset-0 rounded-full bg-emerald-400 animate-pulse"></div>
      )}
    </div>
  </div>

  <!-- Minimal modern card -->
  <div class="relative bg-white dark:bg-gray-900 rounded-xl p-4 md:p-6 lg:p-8 border-l-4 border-blue-500 shadow-sm hover:shadow-md transition-all duration-300 group-hover:-translate-y-1">
    
    <!-- Content -->
    <div class="space-y-3 md:space-y-4">
      <!-- Header -->
      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2 md:gap-3">
        <div class="space-y-1.5 md:space-y-2">
          <div class="flex items-center gap-2 md:gap-3 flex-wrap">
            <time class="text-xs md:text-sm font-medium text-blue-600 dark:text-blue-400">
              {date}
            </time>
            {current && (
              <span class="inline-flex items-center gap-1 px-2 md:px-2.5 py-0.5 md:py-1 bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-300 text-[10px] md:text-xs font-semibold rounded-full">
                <span class="w-1 h-1 md:w-1.5 md:h-1.5 bg-emerald-500 rounded-full"></span>
                Current
              </span>
            )}
          </div>
          <h3 class="text-lg md:text-xl lg:text-2xl font-bold text-gray-900 dark:text-white">
            {title}
          </h3>
          <p class="text-xs md:text-sm font-medium text-blue-600 dark:text-blue-400">
            {company}
          </p>
        </div>
      </div>

      <!-- Description -->
      <p class="text-gray-600 dark:text-gray-400 leading-relaxed text-xs md:text-sm lg:text-base">
        {description}
      </p>

      <!-- Link -->
      {link && (
        <div class="pt-2 md:pt-4">
          <a
            href={link}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1.5 md:gap-2 text-xs md:text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors duration-200"
          >
            <span>View Company</span>
            <svg class="w-3 h-3 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        </div>
      )}
    </div>
  </div>
</div>

<style>
  .group {
    transition: all 0.3s ease;
  }
</style>

